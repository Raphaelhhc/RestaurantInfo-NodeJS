<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>

<h1 class="padding-adjust">All Restaurants</h1>
<div class="padding-adjust">
    <a class="btn btn-outline-secondary" href="/restaurants/new">Add Restaurants</a>
</div>

<% for (let restaurant of restaurants) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if (restaurant.images.length) { %>
                <img class="img-fluid" alt="" src="<%=restaurant.images[0].url%>">
                <% } else { %>
                    <img class="img-fluid" alt="" src="https://res.cloudinary.com/doe9mfetd/image/upload/v1680419365/Go-out-to-eat_WORKFILE/indexdefault_nw9leh.jpg">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%=restaurant.title%></h5>
                    <p class="card-text"><%=restaurant.description%></p>
                    <p class="card-text">
                        <small class="text-body-secondary"><%=restaurant.location%></small>
                    </p>
                    <a class="btn btn-primary" href="/restaurants/<%=restaurant._id%>">
                        View <%=restaurant.title%>
                    </a>
                </div>
            </div>
        </div>
    </div>
<% } %>


<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const restaurants = { features: <%- JSON.stringify(restaurants) %> }
</script>

<script src="/javascripts/clusterMap.js"></script>